<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.financefx.controller.LoginController">
    <center>
        <VBox spacing="12" alignment="CENTER">
            <padding>
                <Insets top="20" right="20" bottom="20" left="20" />
            </padding>
            <Label text="FinanceFX" styleClass="title" />
            <TextField fx:id="usernameField" promptText="Usuario" />
            <PasswordField fx:id="passwordField" promptText="Senha" />
            <Button text="Entrar" onAction="#onLogin" />
            <Label fx:id="message" styleClass="error" />
        </VBox>
    </center>

    <padding>
        <Insets top="40" right="40" bottom="40" left="40" />
    </padding>
</BorderPane>
